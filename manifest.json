{
    "name": "GitHub Line Numers",
    "manifest_version": 2,
    "version": "1.0.0",
    "description": "Display some useful numbers.",
    "icons": { "16": "numbers.png", "48": "numbers.png", "128": "numbers.png" },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": "numbers.png"
    },
    "permissions": [
        "activeTab",
        "declarativeContent",
        "storage",
        "tabs",
        "webNavigation"
    ],
    "content_scripts": [
        {
            "matches": ["*://github.com/*"],
            "exclude_matches": [
                "*://*/*issues*",
                "*://*/*pulls*",
                "*://*/*actions*",
                "*://*/*projects*",
                "*://*/*network*",
                "*://*/*settings*",
                "*://*/*search*"
            ],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ]
}
