{
    "name": "GitHub Line Numers",
    "manifest_version": 2,
    "version": "1.0.0",
    "description": "Display the number of lines in each file.",
    "icons": {},
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": "lines.png"
    },
    "permissions": ["activeTab", "declarativeContent", "storage"],
    "content_scripts": [
        {
            "matches": ["*://github.com/*"],
            "exclude_matches": [
                "*://*/*issues*",
                "*://*/*pulls*",
                "*://*/*actions*",
                "*://*/*projects*",
                "*://*/*network*",
                "*://*/*settings*",
                "*://*/*search*"
            ],
            "js": ["content.js"]
        }
    ],
    "content_security_policy": "script-src 'self' https://github.com; object-src 'self' 'sha256-5w+AEMmtAruRkAXhsQXKLpGs9ZxjhTnWs84y4sTESEM='"
}
